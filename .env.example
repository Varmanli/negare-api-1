PORT=3000
NODE_ENV=development
DATABASE_URL=postgres://postgres:postgres@localhost:5432/negare

# JWT settings
ACCESS_JWT_SECRET=replace-with-access-secret
ACCESS_JWT_EXPIRES=1h
REFRESH_JWT_SECRET=replace-with-refresh-secret
REFRESH_JWT_EXPIRES=30d
SET_PWD_JWT_SECRET=replace-with-set-password-secret
SET_PWD_JWT_EXPIRES=10m

# Auth guard
MOCK_AUTH_ENABLED=true
WALLET_SEED=true
WALLET_TX_WINDOW=60
WALLET_TX_MAX=10
WALLET_WEBHOOK_SECRET=replace-with-strong-secret

# OTP configuration
OTP_TTL_SECONDS=120
OTP_REQUEST_WINDOW=60
OTP_REQUEST_MAX=3
OTP_VERIFY_WINDOW=120
OTP_VERIFY_MAX=5

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379

# Mail (Gmail App Password)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=negarestock@gmail.com
SMTP_PASS=replace-with-app-password
MAIL_FROM="Negare <negarestock@gmail.com>"

# Kavenegar (SMS)
KAVENEGAR_API_KEY=replace-with-api-key
KAVENEGAR_TEMPLATE=sendSMS

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAMESITE=strict
COOKIE_REFRESH_PATH=/auth/refresh
